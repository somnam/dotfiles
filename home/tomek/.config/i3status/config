# i3status configuration file.
# see "man i3status" for documentation.

# It is important that this file is edited as UTF-8.
# The following line should contain a sharp s:
# ÃŸ
# If the above line is not correctly displayed, fix your editor first!

general {
    output_format  = "i3bar"
    colors         = true
    color_good     = "#00FF00"
    color_degraded = "#FFFF00"
    color_bad      = "#FF0000"
    interval       = 5
}

#order += "ipv6"
order += "disk /"
order += "disk /home"
#order += "wireless _first_"
order += "ethernet _first_"
#order += "battery all"
# order += "load"
order += "volume master"
order += "cpu_usage 0"
order += "tztime local"
order += "tzdate local"

# wireless _first_ {
#         format_up = "W: (%quality at %essid) %ip"
#         format_down = "W: down"
# }

ethernet _first_ {
        # if you use %speed, i3status requires root privileges
        format_up = "Net: %ip"
        format_down = "Net: down"
}

# battery all {
#         format = "%status %percentage %remaining"
# }

tztime local {
    format = "%H:%M %d/%m/%Y"
}
volume master {
    format       = "Vol: %volume"
    format_muted = "Vol: muted (%volume)"
    device       = "pulse:0"
}

# load {
#         format = "%5min"
# }

cpu_usage {
    format = "Cpu: %usage"
}

disk "/" {
    format    = "Disk: / %avail"
    align     = "left"
    separator = false
}
disk "/home" {
    format = "/home %avail"
    align  = "left"
}

