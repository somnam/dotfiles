<?xml version="1.0" encoding="UTF-8"?>

<openbox_menu xmlns="http://openbox.org/"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://openbox.org/
  file:///usr/share/openbox/menu.xsd">

  <menu id="exit-menu" label="Exit">
    <item label="Logout">
      <action name="Exit">
        <prompt>yes</prompt>
      </action>
    </item>
    <item label="New Login">
      <action name="Execute">
        <command>dm-tool switch-to-greeter</command>
      </action>
    </item>
    <separator />
    <item label="Suspend">
      <action name="Execute">
        <!-- <command>sh &#45;c "xscreensaver&#45;command &#45;activate ; dbus&#45;send &#45;&#45;system &#45;&#45;print&#45;reply &#45;&#45;dest="org.freedesktop.UPower" /org/freedesktop/UPower org.freedesktop.UPower.Suspend"</command> -->
        <command>sh -c "xscreensaver-command -activate ; systemctl suspend"</command>
      </action>
    </item>
    <item label="Hibernate">
      <action name="Execute">
        <!-- <command>sh &#45;c "xscreensaver&#45;command &#45;activate ; dbus&#45;send &#45;&#45;system &#45;&#45;print&#45;reply &#45;&#45;dest="org.freedesktop.UPower" /org/freedesktop/UPower org.freedesktop.UPower.Suspend"</command> -->
        <command>sh -c "xscreensaver-command -activate ; systemctl hibernate"</command>
      </action>
    </item>
    <separator />
    <item label="Restart">
      <action name="Execute">
        <!-- <command>sh &#45;c "dbus&#45;send &#45;&#45;system &#45;&#45;print&#45;reply &#45;&#45;dest="org.freedesktop.ConsoleKit" /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Restart"</command> -->
        <command>sh -c "systemctl reboot"</command>
      </action>
    </item>
    <item label="Shutdown">
      <action name="Execute">
        <!-- <command>sh &#45;c "dbus&#45;send &#45;&#45;system &#45;&#45;print&#45;reply &#45;&#45;dest="org.freedesktop.ConsoleKit" /org/freedesktop/ConsoleKit/Manager org.freedesktop.ConsoleKit.Manager.Stop"</command> -->
        <command>sh -c "systemctl poweroff"</command>
      </action>
    </item>
  </menu>

  <menu id="settings-menu" label="Settings">
    <item label="ObConf">
      <action name="Execute"><execute>obconf</execute></action>
    </item>
    <item label="Reconfigure">
      <action name="Reconfigure" />
    </item>
    <item label="Restart">
      <action name="Restart" />
    </item>
  </menu>

  <menu id="root-menu" label="Openbox 3">
    <item label="Terminal emulator">
      <action name="Execute"><execute>x-terminal-emulator</execute></action>
    </item>
    <item label="Web browser">
      <action name="Execute"><execute>x-www-browser</execute></action>
    </item>
    <!-- This requires the presence of the 'menu' package to work -->
    <menu id="/Debian" />
    <separator />
    <menu id="client-list-menu" />
    <separator />
    <menu id="settings-menu" />
    <separator />
    <menu id="exit-menu" />
  </menu>

</openbox_menu>

