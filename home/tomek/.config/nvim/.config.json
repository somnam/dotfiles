{
    "colorscheme": "default",
    "background": "dark",
    "treesitter" : {
        "exclude": ["csv"]
    },
    "plugin": {
        "conform": {
            "python": ["black", "isort", "ruff_format", "ruff_fix", "ruff_organize_imports"],
