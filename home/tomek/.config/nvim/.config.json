{
    "colorscheme": "default",
    "background": "dark",
    "buffer": {
        "exclude_filetype": [
          "checkhealth",
          "codecompanion",
          "help",
          "man",
          "mason",
          "netrw",
          "NvimTree",
          "qf",
          "tutor"
        ]
    },
    "lsp": {
        "servers": [
            "jedi_language_server",
            "lua_ls",
            "pyright",
            "quick_lint_js",
            "rust_analyzer",
            "vtsls"
        ],
        "log_level": "ERROR"
    },
    "treesitter" : {
        "ensure_installed": ["diff", "lua", "markdown", "query", "vim", "vimdoc", "yaml"],
        "exclude": ["csv", "sh"]
    },
    "plugin": {
        "conform": {
            "python": ["black", "isort", "ruff_format", "ruff_fix", "ruff_organize_imports"],
            "lua": ["stylua"],
            "rust": ["rustfmt"],
            "*": ["trim_whitespace"]
        },
        "codecompanion": {
            "enable": false,
            "model": null
        },
        "copilot": {
            "enable": false,
            "workspace_folders": []
        },
        "lint": {
            "python": ["flake8", "mypy", "ruff"],
            "systemd": ["systemd-analyze"]
        },
        "mason": {
            "ensure_installed": ["lua-language-server", "stylua"]
        }
    }
}
