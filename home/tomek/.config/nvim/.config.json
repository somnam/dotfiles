{
    "colorscheme": "default",
    "background": "dark",
    "treesitter" : {
        "ensure_installed": ["diff", "lua", "markdown", "query", "vim", "vimdoc"],
        "exclude": []
    },
    "plugin": {
        "conform": {
            "python": ["black", "isort", "ruff_format", "ruff_fix", "ruff_organize_imports"],
            "lua": ["stylua"],
            "rust": ["rustfmt"],
            "*": ["trim_whitespace"]
        },
        "copilot": {
            "enable": false
        },
        "copilot_chat": {
            "enable": false,
            "model": null
        },
        "fzf_lua": {
            "preview": null
        },
        "lint": {
            "python": ["flake8", "mypy", "ruff"]
        },
        "mason": {
            "ensure_installed": []
        }
    }
}
