{
    "colorscheme": "default",
    "background": "dark",
    "termguicolors": true,
    "treesitter" : {
        "exclude": ["csv"]
    },
    "plugin": {
        "lualine": {
          "theme": "auto"
        },
        "formatter": {
            "python": ["black", "isort", "ruff", "ruff_check"],
            "lua": ["stylua"],
            "rust": ["rustfmt"]
        },
        "lint": {
            "python": ["flake8", "mypy", "ruff"],
            "lua": []
        },
        "mason": {
            "ensure_installed": []
        }
    }
}
