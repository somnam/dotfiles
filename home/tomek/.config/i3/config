#  Custom Key Bindings  #
#########################

# Pulse Audio controls
set $volume_up   "pactl set-sink-volume 0 +5%"
set $volume_down "pactl set-sink-volume 0 -5%"
set $volume_mute "pactl set-sink-mute 0 toggle"
# Increase sound volume
bindsym XF86AudioRaiseVolume exec --no-startup-id $volume_up
bindsym $mod+Pause exec --no-startup-id $volume_up
# Decrease sound volume
bindsym XF86AudioLowerVolume exec --no-startup-id $volume_down
bindsym $mod+Scroll_Lock exec --no-startup-id $volume_down
# Mute sound
bindsym XF86AudioMute exec --no-startup-id $volume_mute
bindsym $mod+Print exec --no-startup-id $volume_mute

# Spotify controls
# set $spotify_prev "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Previous"
# set $spotify_toggle "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.PlayPause"
# set $spotify_next "dbus-send --print-reply --dest=org.mpris.MediaPlayer2.spotify /org/mpris/MediaPlayer2 org.mpris.MediaPlayer2.Player.Next"

# Player controls 
set $play_prev   "playerctl previous"
set $play_toggle "playerctl play-pause"
set $play_next   "playerctl next"

# Play/pause
bindsym XF86AudioPlay exec $play_toggle
bindsym $mod+F11 exec $play_toggle
# Next track
bindsym XF86AudioNext exec $play_next
bindsym $mod+F12 exec $play_next
# Previous track
bindsym XF86AudioPrev exec $play_prev
bindsym $mod+F10 exec $play_prev

# Alt launch terminal
bindsym Control+Mod1+Return exec "i3-sensible-terminal"

# Take screenshot
# bindsym Print exec ""

# Lock screen
set $background ~/Pictures/158702.png
bindsym $mod+b exec --no-startup-id i3lock -efi $background && sleep 1

# Cycle windows.
bindsym Mod1+Tab focus right; focus down
bindsym Mod1+Shift+Tab focus left; focus up

# Cycle workspaces.
bindsym Control+Mod1+Right workspace next
bindsym Control+Mod1+Left workspace prev

# Alt switch to workspace
bindsym Control+Mod1+1 workspace 1
bindsym Control+Mod1+2 workspace 2
bindsym Control+Mod1+3 workspace 3
bindsym Control+Mod1+4 workspace 4
bindsym Control+Mod1+5 workspace 5
bindsym Control+Mod1+6 workspace 6
